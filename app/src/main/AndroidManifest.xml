<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shivbhalla.comp3003_pokerapp_psysb7">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.comp3003_pokerapp_psysb7">
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".SinglePlayerGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_singler_player_game"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.comp3003_pokerapp_psysb7.Fullscreen" />
        <activity
            android:name=".MultiPlayerGame"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="title_activity_mutli_player_game"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.comp3003_pokerapp_psysb7.Fullscreen" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.comp3003_pokerapp_psysb7.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>