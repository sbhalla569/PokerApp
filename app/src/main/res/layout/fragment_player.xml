<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playerFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:id="@+id/leftCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/card_back" />

    <ImageView
        android:id="@+id/rightCard"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/card_back"
        android:translationX="30dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:translationY="55dp">

        <TextView
            android:id="@+id/chip_value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center_horizontal"
            android:soundEffectsEnabled="false"
            android:text="@string/hello_blank_fragment"
            android:textStyle="bold"
            android:translationY="-10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/red_a"
            app:layout_constraintWidth_percent="1" />

        <ImageView
            android:id="@+id/red_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chip_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/red_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_1"
            app:layout_constraintBottom_toBottomOf="@id/red_a"
            app:layout_constraintStart_toStartOf="@id/red_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/red_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_1"
            app:layout_constraintBottom_toBottomOf="@id/red_b"
            app:layout_constraintStart_toStartOf="@id/red_b"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/red_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_1"
            app:layout_constraintBottom_toBottomOf="@id/red_c"
            app:layout_constraintStart_toStartOf="@id/red_c"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/pink_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chip_5"
            app:layout_constraintBottom_toBottomOf="@id/red_a"
            app:layout_constraintStart_toEndOf="@id/red_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/pink_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_5"
            app:layout_constraintBottom_toBottomOf="@id/pink_a"
            app:layout_constraintStart_toEndOf="@id/red_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/pink_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_5"
            app:layout_constraintBottom_toBottomOf="@id/pink_b"
            app:layout_constraintStart_toEndOf="@id/red_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/pink_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_5"
            app:layout_constraintBottom_toBottomOf="@id/pink_c"
            app:layout_constraintStart_toEndOf="@id/red_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/turquoise_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chip_25"
            app:layout_constraintBottom_toBottomOf="@id/pink_a"
            app:layout_constraintStart_toEndOf="@id/pink_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/turquoise_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_25"
            app:layout_constraintBottom_toBottomOf="@id/turquoise_a"
            app:layout_constraintStart_toEndOf="@id/pink_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/turquoise_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_25"
            app:layout_constraintBottom_toBottomOf="@id/turquoise_b"
            app:layout_constraintStart_toEndOf="@id/pink_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/yellow_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chip_100"
            app:layout_constraintBottom_toBottomOf="@id/turquoise_a"
            app:layout_constraintStart_toEndOf="@id/turquoise_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/yellow_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_100"
            app:layout_constraintBottom_toBottomOf="@id/yellow_a"
            app:layout_constraintStart_toEndOf="@id/turquoise_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/yellow_c"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_100"
            app:layout_constraintBottom_toBottomOf="@id/yellow_b"
            app:layout_constraintStart_toEndOf="@id/turquoise_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/yellow_d"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_100"
            app:layout_constraintBottom_toBottomOf="@id/yellow_c"
            app:layout_constraintStart_toEndOf="@id/turquoise_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/blue_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chip_500"
            app:layout_constraintBottom_toBottomOf="@id/yellow_a"
            app:layout_constraintStart_toEndOf="@id/yellow_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/blue_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:src="@drawable/chip_500"
            app:layout_constraintBottom_toBottomOf="@id/blue_a"
            app:layout_constraintStart_toEndOf="@id/yellow_a"
            app:layout_constraintWidth_percent="0.1667" />

        <ImageView
            android:id="@+id/green_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/chip_1000"
            app:layout_constraintBottom_toBottomOf="@id/blue_a"
            app:layout_constraintStart_toEndOf="@id/blue_a"
            app:layout_constraintWidth_percent="0.1667" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>