<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Chips">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/chip_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center_horizontal"
        android:soundEffectsEnabled="false"
        android:text="@string/hello_blank_fragment"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:translationY="-10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/red_1"
        app:layout_constraintWidth_percent="1" />

    <ImageView
        android:id="@+id/red_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/chip_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/red_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_1"
        app:layout_constraintBottom_toBottomOf="@id/red_1"
        app:layout_constraintStart_toStartOf="@id/red_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/red_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_1"
        app:layout_constraintBottom_toBottomOf="@id/red_2"
        app:layout_constraintStart_toStartOf="@id/red_2"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/red_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_1"
        app:layout_constraintBottom_toBottomOf="@id/red_3"
        app:layout_constraintStart_toStartOf="@id/red_3"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/pink_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chip_5"
        app:layout_constraintBottom_toBottomOf="@id/red_1"
        app:layout_constraintStart_toEndOf="@id/red_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/pink_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_5"
        app:layout_constraintBottom_toBottomOf="@id/pink_1"
        app:layout_constraintStart_toEndOf="@id/red_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/pink_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_5"
        app:layout_constraintBottom_toBottomOf="@id/pink_2"
        app:layout_constraintStart_toEndOf="@id/red_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/pink_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_5"
        app:layout_constraintBottom_toBottomOf="@id/pink_3"
        app:layout_constraintStart_toEndOf="@id/red_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/turquoise_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chip_25"
        app:layout_constraintBottom_toBottomOf="@id/pink_1"
        app:layout_constraintStart_toEndOf="@id/pink_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/turquoise_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_25"
        app:layout_constraintBottom_toBottomOf="@id/turquoise_1"
        app:layout_constraintStart_toEndOf="@id/pink_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/turquoise_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_25"
        app:layout_constraintBottom_toBottomOf="@id/turquoise_2"
        app:layout_constraintStart_toEndOf="@id/pink_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/yellow_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chip_100"
        app:layout_constraintBottom_toBottomOf="@id/turquoise_1"
        app:layout_constraintStart_toEndOf="@id/turquoise_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/yellow_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_100"
        app:layout_constraintBottom_toBottomOf="@id/yellow_1"
        app:layout_constraintStart_toEndOf="@id/turquoise_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/yellow_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_100"
        app:layout_constraintBottom_toBottomOf="@id/yellow_2"
        app:layout_constraintStart_toEndOf="@id/turquoise_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/yellow_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_100"
        app:layout_constraintBottom_toBottomOf="@id/yellow_3"
        app:layout_constraintStart_toEndOf="@id/turquoise_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/blue_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chip_500"
        app:layout_constraintBottom_toBottomOf="@id/yellow_1"
        app:layout_constraintStart_toEndOf="@id/yellow_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/blue_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:src="@drawable/chip_500"
        app:layout_constraintBottom_toBottomOf="@id/blue_1"
        app:layout_constraintStart_toEndOf="@id/yellow_1"
        app:layout_constraintWidth_percent="0.1667" />

    <ImageView
        android:id="@+id/green_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/chip_1000"
        app:layout_constraintBottom_toBottomOf="@id/blue_1"
        app:layout_constraintStart_toEndOf="@id/blue_1"
        app:layout_constraintWidth_percent="0.1667" />

</androidx.constraintlayout.widget.ConstraintLayout>